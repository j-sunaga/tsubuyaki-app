<div class="wrapper clearfix">
  <div class="sidemenu">
    <section class="user-info">
      <%= image_tag('profile.jpg') %>
      <h2>Cat Taro</h2>
      <span><a href="#">View Profile</a></span>
    </section>
    <section>
      <div class="stat">
      <a href="#">Following</a>
      <a href="#">Followers</a>
      </div>
    </section>
    <section class="micro-post">
      <%= render 'form' %>
    </section>


    </div>

    <div class="main">
    <h3>つぶやき一覧</h3>
    <p><%= notice %></p>

    <!-- つぶやき一覧を表示する -->
    <ul class = "tweets">
    <% @tsubuyakies.each {|tsubuyaki| %>
        <li class="tweet">
          <div class="tweet-content">
          <%= image_tag('profile.jpg') %>
          <span class="tweet-tsubuyaki"><%= tsubuyaki.content %></span>
          <span class="create_date"><%= tsubuyaki.created_at %></span>
          <%= link_to '詳細', tsubuyaky_path(tsubuyaki.id) %>
          <%= link_to '編集', edit_tsubuyaky_path(tsubuyaki.id),data: { confirm: '本当に編集していいですか？' }  %>
          <%= link_to '削除', tsubuyaky_path(tsubuyaki.id), method: :delete ,data: { confirm: '本当に削除していいですか？' } %>
          </div>
        </li>
    <% } %>
    </ul>

    <!-- 新規ツイート画面へのリンク -->
    <div class="new_link"><%= link_to '新規作成画面', new_tsubuyaky_path %></div>
    </div>
  </div>
